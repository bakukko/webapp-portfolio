{
  "name": "webapp-cronometraggio-sportivo",
  "version": "1.0.0",
  "description": "Webapp di cronometraggio ottimizzata per dispositivi mobile",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-database.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js --max-warnings 0",
    "build": "echo 'Build step - add your build logic here'",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "backup": "./scripts/backup.sh",
    "restore": "./scripts/restore.sh",
    "deploy": "./scripts/deploy.sh",
    "update": "./scripts/update.sh",
    "setup": "npm install && npm run init-db",
    "health": "curl -f http://localhost:3002/api/health || echo 'Service not available'",
    "logs": "tail -f logs/*.log 2>/dev/null || echo 'No log files found'",
    "clean": "rm -rf node_modules coverage .jest-cache && npm install"
  },
  "keywords": ["cronometraggio", "sportivo", "mobile", "webapp"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "multer": "^1.4.5",
    "csv-parser": "^3.0.0",
    "fast-csv": "^4.3.6",
    "pdfkit": "^0.13.0",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "joi": "^17.11.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
