# ===========================================
# CRONOMETRAGGIO SPORTIVO - CONFIGURAZIONE
# ===========================================

# ===== DATABASE CONFIGURATION =====
# PostgreSQL Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cronometraggio_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database Pool Settings (optional)
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ===== SERVER CONFIGURATION =====
# Server Port
PORT=3002

# Environment (development, production, test)
NODE_ENV=development

# ===== SECURITY CONFIGURATION =====
# Session Secret Key (CHANGE IN PRODUCTION!)
SESSION_SECRET=your_very_long_random_secret_key_change_in_production_min_32_chars

# JWT Secret (if implementing JWT in future)
# JWT_SECRET=your_jwt_secret_key_here

# ===== APPLICATION SETTINGS =====
# Maximum number of cronometraggi to keep
MAX_CRONOMETRAGGI=5

# Auto-save interval in milliseconds (30 seconds)
AUTO_SAVE_INTERVAL=30000

# ===== FILE UPLOAD SETTINGS =====
# Maximum file size for uploads (5MB in bytes)
MAX_FILE_SIZE=5242880

# Upload directory path
UPLOAD_PATH=./uploads

# ===== EXPORT SETTINGS =====
# PDF Export Settings
PDF_LOGO_PATH=./assets/logo.png
PDF_AUTHOR=Cronometraggio Sportivo
PDF_CREATOR=Cronometraggio App v1.0

# ===== LOGGING SETTINGS =====
# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Directory
LOG_DIR=./logs

# Log File Max Size (10MB)
LOG_MAX_SIZE=10485760

# Max Log Files to Keep
LOG_MAX_FILES=5

# ===== PERFORMANCE SETTINGS =====
# Enable compression
ENABLE_COMPRESSION=true

# Cache TTL in seconds (1 hour)
CACHE_TTL=3600

# ===== EMAIL SETTINGS (for future notifications) =====
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# SMTP_FROM=noreply@cronometraggio.com

# ===== BACKUP SETTINGS =====
# Backup directory
BACKUP_DIR=./backups

# Days to keep backups
BACKUP_RETENTION_DAYS=7

# Enable automatic backups
AUTO_BACKUP_ENABLED=true

# Backup interval in hours
AUTO_BACKUP_INTERVAL=24

# ===== MONITORING SETTINGS =====
# Health check endpoint enabled
HEALTH_CHECK_ENABLED=true

# Metrics collection enabled
METRICS_ENABLED=false

# ===== CORS SETTINGS =====
# Allowed origins (comma separated)
CORS_ORIGINS=http://localhost:3002,https://yourdomain.com

# ===== RATE LIMITING =====
# Enable rate limiting
RATE_LIMIT_ENABLED=false

# Requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Window size in minutes
RATE_LIMIT_WINDOW_MINUTES=15

# ===== SSL/TLS SETTINGS (for production) =====
# SSL Certificate paths
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem

# Force HTTPS redirect
# FORCE_HTTPS=true

# ===== DEVELOPMENT SETTINGS =====
# Enable debug mode
DEBUG_MODE=false

# Enable hot reload for development
HOT_RELOAD=true

# Enable detailed error reporting in development
DETAILED_ERRORS=true

# ===== TESTING SETTINGS =====
# Test database settings
TEST_DB_NAME=cronometraggio_test_db
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=test_password

# ===== EXTERNAL SERVICES =====
# External API keys (if needed in future)
# WEATHER_API_KEY=your_weather_api_key
# MAPS_API_KEY=your_maps_api_key

# ===== FEATURE FLAGS =====
# Enable/disable features
FEATURE_PDF_EXPORT=true
FEATURE_CSV_EXPORT=true
FEATURE_BULK_IMPORT=true
FEATURE_STATISTICS=true
FEATURE_BACKUP=true

# ===== LOCALIZATION =====
# Default language
DEFAULT_LANGUAGE=it

# Timezone
DEFAULT_TIMEZONE=Europe/Rome

# Date format
DATE_FORMAT=DD/MM/YYYY

# Time format
TIME_FORMAT=HH:mm:ss

# ===== ANALYTICS (optional) =====
# Google Analytics ID
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# Enable usage analytics
# ANALYTICS_ENABLED=false
